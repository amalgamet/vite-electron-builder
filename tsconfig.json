{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "types": ["vite/client", "node"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["esnext"]
  }
}
